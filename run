#!/usr/bin/env bash
set -e

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" &>/dev/null && pwd)"

# ---------------------------------------------------
# DEV_ENV handling
# ---------------------------------------------------
if [[ -z "$DEV_ENV" ]]; then
    DEV_ENV="$script_dir"
fi
export DEV_ENV

# ---------------------------------------------------
# Args
# ---------------------------------------------------
grep=""
dry_run="0"

while [[ $# -gt 0 ]]; do
    echo "ARG: \"$1\""
    case "$1" in
        --dry|--dry-run)
            dry_run="1"
            ;;
        *)
            grep="$1"
            ;;
    esac
    shift
done

# ---------------------------------------------------
# Logging
# ---------------------------------------------------
log() {
    if [[ "$dry_run" == "1" ]]; then
        echo "[DRY_RUN] $1"
    else
        echo "$1"
    fi
}

log "RUN: env: $DEV_ENV -- grep: $grep"

# ---------------------------------------------------
# Execute matching run script
# ---------------------------------------------------
runs_dir=$(find "$script_dir/runs" -mindepth 1 -maxdepth 1 -type f -executable)

for s in $runs_dir; do
    name="$(basename "$s")"

    if [[ -n "$grep" ]] && ! echo "$name" | grep -q "$grep"; then
        log "grep \"$grep\" filtered out $s"
        continue
    fi

    log "running script: $s"

    if [[ "$dry_run" == "0" ]]; then
        "$s"
    fi

# If grep is set, stop after first match
if [[ -n "$grep" ]]; then
    break

fi
done




